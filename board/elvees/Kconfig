
config SYS_VENDOR
	default "elvees"

if ARCH_MCOM03

choice
	prompt "MCom-03 board select"

config TARGET_HAPS
	bool "HAPS"
	select DM_ETH
	select DM_MMC
	help
	  Support for the following boards:
	    HAPS prototype for MCom-03

