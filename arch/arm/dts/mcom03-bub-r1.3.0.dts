/dts-v1/;

#include "mcom03.dtsi"

/ {	model = "MCom-03 Bring-Up Board r1.3.0";
	compatible = "elvees,mcom03-bub-r1.3.0";

	aliases {
		serial0 = &uart0;
		spi0 = &qspi;
	};

	cpu_clk: cpu_clk {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <1400000000>;
	};

	common_clk: common_clk {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <27000000>;
	};

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "earlycon console=ttyS0,115200";
	};

	reserved_memory: reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		cpu_reserved: cpu_reserved@C0000000 {
			reg = <0xC0080000 0x1000>;
			no-map;
		};
	};
};

&uart0 {
	status = "okay";
	clock-frequency = <27000000>;
};

&timer0 {
	clocks = <&common_clk>;
	status = "okay";
};
