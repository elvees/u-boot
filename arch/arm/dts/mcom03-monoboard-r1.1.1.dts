/dts-v1/;

#include <dt-bindings/gpio/gpio.h>

#include "mcom03.dtsi"

/ {
	model = "MONO-BOARD r1.1.1";
	compatible = "elvees,monoboard-r1.1.1",
		     "elvees,monoboard",
		     "elvees,mcom03";

	chosen {
		stdout-path = "serial0:115200n8";
	};

	sdhci0_supply: regulator@0 {
		compatible = "regulator-fixed";
		regulator-name = "sdhci0-supply";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		regulator-always-on;
	};
};

&uart0 {
	status = "okay";
	clock-frequency = <27920454>;
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&emac0 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-reset-gpios = <&gpio0c 0 GPIO_ACTIVE_LOW>;
	phy-handle = <&ethernet_phy0>;

	ethernet_phy0: ethernet-phy@0 {
		reg = <0x0>;
		motorcomm,clk-out-frequency-hz = <0>;
		rx-internal-delay-ps = <1650>;
		tx-internal-delay-ps = <1050>;
	};
};

&emac1 {
	status = "okay";
	phy-mode = "rgmii-id";
	phy-reset-gpios = <&gpio0c 1 GPIO_ACTIVE_LOW>;
	phy-handle = <&ethernet_phy1>;

	ethernet_phy1: ethernet-phy@2 {
		reg = <0x2>;
		motorcomm,clk-out-frequency-hz = <0>;
		rx-internal-delay-ps = <1650>;
		tx-internal-delay-ps = <1350>;
	};
};

/* Connected to eMMC */
&sdhci0 {
	status = "okay";

	non-removable;
	bus-width = <8>;

	vqmmc-supply = <&sdhci0_supply>;
};

&qspi0 {
	status = "okay";

	flash0: w25q16@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor", "spi-flash";
		reg = <0x0>;

		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
	};
};
