/dts-v1/;

#include "mcom03-haps-common.dtsi"

/ {
	model = "MCom-03 HAPS, full configuration";

	acptest {
		compatible = "elvees,acptest";
	};

	common_clk: common_clk {
		#clock-cells = <0>;
		compatible = "fixed-clock";
		clock-frequency = <5000000>;
	};
};

&gpu {
	status = "okay";
};

&vpu {
	status = "okay";
};

&emac0 {
	#address-cells = <1>;
	#size-cells = <0>;
	phy-mode = "gmii";
	status = "okay";
	phy-handle = <&ethernet_phy>;
	clocks = <&common_clk>;

	/* These two are required on HAPS due to its low frequency */
	arasan,max-mdc-freq = <150000>;
	arasan,tx-start-threshold = <1518>;

	ethernet_phy: ethernet-phy@0 {
		reg = <0x0>;
	};
};

&qlic0 {
	status = "okay";
};

&elcore0 {
	status = "okay";
};

&elcore1 {
	status = "okay";
};

&timer0 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer1 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer2 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer3 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer4 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer5 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer6 {
	clocks = <&common_clk>;
	status = "okay";
};

&timer7 {
	clocks = <&common_clk>;
	status = "okay";
};

&wdt0 {
	clocks = <&common_clk>;
};
