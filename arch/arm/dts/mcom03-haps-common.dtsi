/dts-v1/;

#include "mcom03.dtsi"

/ {
	compatible = "elvees,mcom03-haps";

	aliases {
		serial1 = &uart1;
	};

	chosen {
		stdout-path = "serial1:115200n8";
		bootargs = "earlycon console=ttyS0,115200 modprobe.blacklist=acptest,vdmaacptest";
	};

	memory@0 {
		device_type = "memory";
		reg = <0xC0080000 0x3FF00000>; /* 1023 MiB */
	};

	reserved_memory: reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		cpu_reserved: cpu_reserved@C0000000 {
			reg = <0xC0080000 0x1000>;
			no-map;
		};
	};
};

&uart1 {
	status = "okay";
	clock-frequency = <14750000>;
};
